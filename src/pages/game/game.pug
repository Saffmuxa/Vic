              .question-button-wrapper
                .question-button(data-score=column[3]).js-fifthRow
                  span.dollar $
                  =column[3]
              .question-button-wrapper
                .question-button(data-score=column[4]).js-fifthRow
                  span.dollar $
                  =column[4]
             
      .questionWindow.js-questionWindow
        .questionWindow__wrap
          .questionWindow__qnum
            h1.question.js-question Вопрос номер 
          .questionWindow__text-wrap
              p.question__text.js-question__text Вопрос  текст
              .bag-div.js-bag-div.invisible
                include ./bag.pug
          button.questionWindow__vars.js-questionWindow__vars-btn
            span.js-questionWindow__vars Верный ответ

          
