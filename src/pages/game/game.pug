extends ../layout

append style
  link(rel='stylesheet' href=require('./game.scss'))

append script
  script(src=require('./game.js'))
  

block content
  -const column = [100, 200, 300, 400, 500];
  -const blockName = ['Люди', 'Книги', 'Музыка', 'Истории', 'Истории22'];

  .game
    .board-wrapper
      .board
        .main-board
          .expanding-block(style='opacity: 1.0;')
            .question(style='transform: translateX(0%);')
              .content-wrap
            .answer(style='transform: translateX(0%);')
              .content-wrap
          h2 Какая то игра
          .game-grid
            .game-column
              .title.js-title=blockName[0]
              .question-button-wrapper
                .question-button(data-score=column[0], qnumber=1).js-firstRow
                  span.dollar $
                  =column[0]
              .question-button-wrapper
                .question-button(data-score=column[1] qnumber=2).js-firstRow
                  span.dollar $
                  =column[1]
              .question-button-wrapper
